<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ee8989"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samkough.tictactoe.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TIC TAC TOE"
        android:id="@+id/titleText"
        android:gravity="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NEW GAME"
        android:textColor="@drawable/button_text_color"
        android:gravity="center"
        android:id="@+id/newGameButton"
        android:onClick="newGame"
        android:layout_below="@+id/titleText"
        android:layout_alignRight="@+id/aboutButton"
        android:layout_alignEnd="@+id/aboutButton"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableLayout"
        android:layout_below="@+id/newGameButton"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/zero_zero"
                android:layout_column="0"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/zero_one"
                android:layout_column="15"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/zero_two"
                android:layout_column="22"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/one_zero"
                android:layout_column="0"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/one_one"
                android:layout_column="15"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/one_two"
                android:layout_column="22"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/two_zero"
                android:layout_column="0"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/two_one"
                android:layout_column="15"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@drawable/button_text_color"
                android:text="__"
                android:gravity="center"
                android:id="@+id/two_two"
                android:layout_column="22"/>
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/button_text_color"
        android:text="ABOUT"
        android:id="@+id/aboutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
