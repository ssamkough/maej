<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samkough.bulletedtext.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:id="@+id/aboutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Radio Button"
        android:id="@+id/radioButton1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Radio Button"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:layout_below="@+id/radioButton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third Radio Button"
        android:id="@+id/radioButton3"
        android:checked="false"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fourth Radio Button"
        android:id="@+id/radioButton4"
        android:checked="false"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fifth Radio Button"
        android:id="@+id/radioButton5"
        android:checked="false"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/radioButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/textBox1"
        android:textSize="10dp"
        android:layout_above="@+id/radioButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/textBox2"
        android:textSize="10dp"
        android:layout_above="@+id/radioButton3"
        android:layout_alignLeft="@+id/textBox1"
        android:layout_alignStart="@+id/textBox1"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/textBox3"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/radioButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textBox2"
        android:layout_alignStart="@+id/textBox2"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/textBox4"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/radioButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textBox3"
        android:layout_alignStart="@+id/textBox3"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/textBox5"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/radioButton5"
        android:layout_alignRight="@+id/aboutButton"
        android:layout_alignEnd="@+id/aboutButton"/>
</RelativeLayout>
