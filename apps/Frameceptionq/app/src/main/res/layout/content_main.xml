<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#627cff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samkough.frameception.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:id="@+id/aboutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#e91e63"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:background="#45e91e"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:background="#1ed7e9"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout2">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:background="#69000e"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:background="#fbc72b"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeLayout3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="LAYOUT 5"
                            android:id="@+id/textView5"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="30dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LAYOUT 4"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/relativeLayout3"
                        android:layout_alignParentLeft="true"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="LAYOUT 3"
                android:id="@+id/textView3"
                android:layout_below="@+id/relativeLayout2"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LAYOUT 2"
            android:id="@+id/textView2"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LAYOUT 1"
        android:id="@+id/textView"
        android:layout_above="@+id/aboutButton"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentStart="true"/>
</RelativeLayout>