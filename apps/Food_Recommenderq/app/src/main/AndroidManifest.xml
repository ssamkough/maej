<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.samkough.foodrecommender"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MeatActivity"
            android:label="@string/title_activity_meat"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".GreensActivity"
            android:label="@string/title_activity_greens"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".DessertActivity"
            android:label="@string/title_activity_dessert"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>