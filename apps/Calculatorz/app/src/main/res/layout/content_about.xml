<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#97A4A8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samkough.calculator.AboutActivity"
    tools:showIn="@layout/activity_about">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/icon"
        android:src="@drawable/web_hi_res_512"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- to add a line break, put this: &#xA; -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey there! This is my second app in my 'Make An App Everyday Journey'.
        &#xA;&#xA;This app took longer then my first one to make, due to the fact that the GUI and code were a bit more complex.
        &#xA;&#xA;I'm really enjoying this journey and after today, I realized that some apps that I have in store might take two or more days, but that doesn't mean I won't continue this journey, they'll just take longer.
        &#xA;&#xA;I hope you guys enjoy this app, have fun!"
        android:id="@+id/aboutText"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#C71C69"/>
</RelativeLayout>
