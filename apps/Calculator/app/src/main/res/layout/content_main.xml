<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#97A4A8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samkough.calculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:id="@+id/outputText"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/outputText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="+"
            android:id="@+id/plusButton"
            android:layout_below="@+id/zeroButton"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="-"
            android:id="@+id/minusButton"
            android:layout_alignTop="@+id/timesButton"
            android:layout_toEndOf="@+id/timesButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="*"
            android:id="@+id/timesButton"
            android:layout_below="@+id/plusButton"
            android:layout_toStartOf="@+id/divisionButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="/"
            android:id="@+id/divisionButton"
            android:layout_above="@+id/timesButton"
            android:layout_toEndOf="@+id/plusButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="="
            android:id="@+id/equalsButton"
            android:layout_alignTop="@+id/divisionButton"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:id="@+id/aboutButton"
            android:layout_alignBottom="@+id/minusButton"
            android:layout_alignEnd="@+id/equalsButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="1"
            android:id="@+id/oneButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="2"
            android:id="@+id/twoButton"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/fiveButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="3"
            android:id="@+id/threeButton"
            android:layout_above="@+id/sixButton"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="4"
            android:id="@+id/fourButton"
            android:layout_alignTop="@+id/fiveButton"
            android:layout_toStartOf="@+id/divisionButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="5"
            android:id="@+id/fiveButton"
            android:layout_below="@+id/oneButton"
            android:layout_alignStart="@+id/eightButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="6"
            android:id="@+id/sixButton"
            android:layout_alignTop="@+id/fiveButton"
            android:layout_alignStart="@+id/threeButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="7"
            android:id="@+id/sevenButton"
            android:layout_above="@+id/zeroButton"
            android:layout_toStartOf="@+id/divisionButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="8"
            android:id="@+id/eightButton"
            android:layout_alignTop="@+id/nineButton"
            android:layout_alignStart="@+id/zeroButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="9"
            android:id="@+id/nineButton"
            android:layout_below="@+id/sixButton"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:textSize="40dp"
            android:text="0"
            android:id="@+id/zeroButton"
            android:layout_below="@+id/eightButton"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:id="@+id/resetButton"
            android:layout_alignBottom="@+id/minusButton"
            android:layout_toStartOf="@+id/aboutButton" />
    </RelativeLayout>


</RelativeLayout>
